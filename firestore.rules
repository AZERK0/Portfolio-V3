rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    function isPublished() {
      return resource.data.status == "published";
    }

    function isReadonlyCollection() {
      return true;
    }

    match /profiles/{docId} {
      allow read: if isReadonlyCollection() && isPublished();
      allow write: if false;
    }

    match /skills/{docId} {
      allow read: if isReadonlyCollection() && isPublished();
      allow write: if false;
    }

    match /studies/{docId} {
      allow read: if isReadonlyCollection() && isPublished();
      allow write: if false;
    }

    match /experiences/{docId} {
      allow read: if isReadonlyCollection() && isPublished();
      allow write: if false;
    }

    match /projects/{docId} {
      allow read: if isReadonlyCollection() && isPublished();
      allow write: if false;
    }

    match /portfolioStats/{docId} {
      allow read: if isReadonlyCollection() && isPublished();
      allow write: if false;
    }
  }
}
